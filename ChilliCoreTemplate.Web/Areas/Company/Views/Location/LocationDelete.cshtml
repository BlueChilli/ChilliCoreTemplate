@model LocationViewModel
@using (Html.BeginFormCustom(Mvc.Company.Location_Delete, htmlAttributes: new { @class = "form-horizontal" }))
{
    @Html.HiddenFor(m => m.Id)
    <div class="modal-body">
        @Html.ValidationSummary()
        <p>Are you sure you want delete the location <b>@Model.Name?</b></p>
    </div>
    <div class="modal-footer">
        @Html.ButtonSubmitAsync(new Template_Button { Style = ButtonStyle.Danger, Text = "Yes, delete this location" })
        <button class="btn btn-secondary" data-dismiss="modal">Cancel</button>
    </div>
}
<script>
    $('#@Mvc.Company.Location_Delete.GetFormId()').ajaxForm({ target: '#@Mvc.Company.Location_Delete.GetModalId()_content' });
</script>