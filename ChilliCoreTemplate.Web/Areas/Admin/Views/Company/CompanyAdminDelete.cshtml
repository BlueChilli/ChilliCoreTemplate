@model CompanyUserViewModel
@using (Html.BeginFormCustom(Mvc.Admin.Company_Admin_Remove, htmlAttributes: new { @class = "form-horizontal" }))
{
    @Html.HiddenFor(m => m.Id)
    @Html.HiddenFor(m => m.UserId)
    <div class="modal-body">
        @Html.ValidationSummary()
        <p>Are you sure you want remove the admin <b>@Model.Name</b> from this Company?</p>
    </div>
    <div class="modal-footer">
        @await Html.ButtonSubmitAsync(new Template_Button { Style = ButtonStyle.Danger, Text = "Yes, remove this admin" })
        @await Html.ButtonAsync(FieldTemplateHelper.ButtonModalDismissOptions)
    </div>
}
<script>
    $('#@Mvc.Admin.Company_Admin_Remove.GetFormId()')
        .ajaxForm({ target: '#@Mvc.Admin.Company_Admin_Remove.GetModalId()_content' })
        .done(function () {
            SearchTable(userTable);
            $('#@Mvc.Admin.Company_Admin_Remove.GetModalId()').modal('hide');
        });
</script>