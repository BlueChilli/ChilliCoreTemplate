@model AccountViewModel
@using (Html.BeginFormCustom(Mvc.Admin.User_Purge))
{
    <div class="modal-body">
        @Html.ValidationSummary()
        <p>Are you sure you want purge the account for <b>@Model.Email?</b></p>
    </div>
    <div class="modal-footer">
        @await Html.ButtonSubmitAsync(new Template_Button { Style = ButtonStyle.Danger, Text = $"Yes, purge this account" })
        @await Html.ButtonAsync(FieldTemplateHelper.ButtonModalDismissOptions)
    </div>
}
<script>
    $('#@Mvc.Admin.User_Purge.GetFormId()').ajaxForm({ target: '#@Mvc.Admin.User_Purge.GetModalId()_content' });        
</script>
