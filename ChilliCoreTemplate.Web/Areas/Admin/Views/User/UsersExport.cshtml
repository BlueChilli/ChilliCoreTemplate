@model UsersExportModel
@using (Html.BeginFormCustom(Mvc.Admin.User_Export))
{
    <div class="modal-body">
        @Html.ValidationSummary()
        <div class="form-group">
            @await Html.FieldTemplateForAsync(m => m.Roles, options: new TemplateOptions { Template = FieldTemplateLayouts.ModalField }, fieldOptions: new SelectFieldTemplateOptions { SelectList = Model.RoleList })
        </div>

    </div>
    <div class="modal-footer">
        @await Html.ButtonSubmitAsync("Submit")
        @await Html.ButtonAsync(FieldTemplateHelper.ButtonModalDismissOptions)
    </div>
}
<script>
    $('#@Mvc.Admin.User_Export.GetFormId()').submit(function () {
        $('#@Mvc.Admin.User_Export.GetModalId()').modal('hide');
        return true;
    });

    $('#@Html.IdFor(m => m.Roles)').chosen({
        width: "100%",
    })
</script>
