@model FieldTemplateModel
<div class="form-group">
    <label class="col-md-2 control-label">@Model.DisplayName @Html.When(!Model.IsMandatory, "<small>(optional)</small>") @if(!String.IsNullOrEmpty(Model.HelpText)) { <br/><span class="help-text">@Html.Raw(Model.HelpText)</span>   }</label>
    <div class="col-md-@Model.FieldColumnSize.GetValueOrDefault(10)">
        <div class="row">
            <div class="@Model.GetFieldSize()">
                @FieldTemplateModel.InnerTemplateMarker
                @if (!String.IsNullOrEmpty(Model.ModelName)) { @Html.ValidationMessage(Model.ModelName) }
            </div>
        </div>
    </div>
</div>