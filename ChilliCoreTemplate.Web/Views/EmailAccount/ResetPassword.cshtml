@model ResetPasswordViewModel
<h2 class="m-t-md m-b-xl">Reset Password for @Model.Email</h2>
@using (Html.BeginFormCustom(Mvc.Root.EmailAccount_ResetPassword))
{
    @Html.ValidationSummary()
    @Html.HiddenFor(model => model.Token)
    @Html.HiddenFor(model => model.Email)

    <div class="form-group">
        @await Html.FieldTemplateInnerForAsync(model => model.NewPassword, htmlAttributes: new { autofocus = "autofocus", @class = "form-control-lg" })
    </div>
    <div class="form-group">
        @await Html.FieldTemplateInnerForAsync(model => model.ConfirmPassword, htmlAttributes: new { @class = "form-control-lg" })
    </div>
    <button class="btn btn-primary btn-lg block full-width m-b" type="submit">Reset my Password</button>
    
    @await Html.ButtonAsync(Mvc.Root.EmailAccount_Login, new Template_Button { Text = "Cancel", Style = ButtonStyle.Secondary, HtmlAttributes = new { @class = "btn-lg block full-width m-b" } })
}