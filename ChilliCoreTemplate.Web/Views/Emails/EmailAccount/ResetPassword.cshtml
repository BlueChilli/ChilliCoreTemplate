@model RazorTemplateDataModel<ResetPasswordRequestModel>
@inject ProjectSettings config
@{
    Layout = "~/Views/Emails/_MjmlLayout.cshtml";
    var builder = EmailBuilder.CreateDefault(this.Html, EmailConstants.EmailOptions);

    Model.Subject = String.Format("Forgot your {0} password?", Model.Site);
    Model.Title = "Forgot your password?";
    Model.EmailPreview = "No worries, just follow the link inside";
    var data = new UserTokenModel { Email = Model.Data.Email, Token = Model.Data.Token.ToShortGuid().ToString() }.ToTokenModel();
    var url = Model.IsApi
        ? config.ResolveUrl("~/account/resetPassword", data)
        : Mvc.Root.EmailAccount_ResetPassword.Url(this.Url, routeValues: data, protocol: "https");
}
<mj-section background-color="#FFFFFF" padding="48px 0">
    <mj-column>
        <mj-text mj-class="paragraph">
            No worries, just click on the button below and you'll be able to reset it immediately!
        </mj-text>
        <mj-button mj-class="btn" href="@builder.UrlTrack(Model.TrackingId, Model.TemplateId, url)">Reset your password</mj-button>
        <mj-text mj-class="paragraph">
            For your security, this link expires within an hour of being sent. If the link is expired, you will need to click forgot password again.
        </mj-text>
    </mj-column>
</mj-section>